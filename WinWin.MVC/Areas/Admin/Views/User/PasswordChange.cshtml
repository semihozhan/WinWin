@model WinWin.Entities.Dtos.UserPasswordChangeDto
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key"></span> Şifre Değiştir</h4>
            </div>
            <div class="card-body">
                <form asp-action="PasswordChange" method="post" asp-controller="User">
                   

                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>

                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input class="form-control" type="password" asp-for="CurrentPassword" placeholder="Mevcut Şifre" />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input class="form-control" type="password" asp-for="NewPassword" placeholder="Yeni Şifre" />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input class="form-control" type="password" asp-for="RepeatPassword" placeholder="Yeni Şifre Tekrar" />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        <a class="btn btn-warning btn-block" asp-area="Admin" asp-controller="Home" asp-action="Index">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


